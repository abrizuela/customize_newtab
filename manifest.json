{
  "applications": {
    "gecko": {
      "id": "customizenewtab@alejandrobrizuela.com.ar"
    }
  },

  "manifest_version": 2,
  "name": "New Tab's Background",
  "version": "2.0.0",
  "description": "Customize the background of your new tab page",

  "icons": {
    "48": "icons/ntb-icon-48.png",
    "64": "icons/ntb-icon-64.png"
  },
  
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],

  "chrome_url_overrides": {
		"newtab": "newtab.html"
	},
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["ntb.js"]
    }
  ],

  "web_accessible_resources": [
    "icons/ntb-icon-32.png"
  ]

}